{% block eecom_element_blog_single_select %}
    {% set blog = element.data %}
    {% set config = element.fieldConfig.elements %}


    {% if blog|length %}
        {% sw_include '@Storefront/storefront/component/eecom-blog/card/box.html.twig' with {
            'layout': config.showType.value,
            'displayMode': config.displayMode.value
        } %}
    {% else %}
        {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
            type: "primary",
            content: "eecom-blog.element.singleSelect.emptyResult"|trans|sw_sanitize,
            icon: false
        } %}
    {% endif %}

{% endblock %}
