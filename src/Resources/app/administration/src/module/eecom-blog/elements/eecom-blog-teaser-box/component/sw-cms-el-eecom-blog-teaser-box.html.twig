{% block sw_cms_element_eecom_blog_teaser_box %}
    <div
        class="sw-cms-el-product-slider"
        :class="classes"
        :style="verticalAlignStyle"
    >
        {% block sw_cms_element_eecom_blog_teaser_box_title %}
            <div
                v-if="element.config.title.value"
                class="sw-cms-el-product-slider__title"
            >
                {{ element.config.title.value }}
            </div>
        {% endblock %}


        {% block sw_cms_element_eecom_blog_teaser_box_content %}
            <div class="sw-cms-el-product-slider__content">
                {% block sw_cms_element_eecom_blog_teaser_box_arrow_left %}
                    <div
                        v-if="hasNavigation"
                        class="sw-cms-el-product-slider__navigation"
                    >
                        <sw-icon
                            class="sw-cms-el-product-slider__navigation-button"
                            name="default-arrow-head-left"
                            size="24"
                        />
                    </div>
                {% endblock %}

                {% block sw_cms_element_eecom_blog_teaser_box_blog_holder %}
                    <div
                        ref="blogHolder"
                        class="sw-cms-el-product-slider__product-holder"
                        :style="sliderBoxMinWidth"
                    >
                        <template v-if="!element.data || !element.data.blogs">
                            {% block sw_cms_element_eecom_blog_teaser_box_demo_data %}
                                <sw-cms-el-eecom-blog-box
                                    v-for="index in sliderBoxLimit"
                                    :key="index"
                                    :element="demoBlogElement"
                                />

                            {% endblock %}
                        </template>

                        <template v-else>
                            {% block sw_cms_element_eecom_blog_teaser_box_blogs %}
                                <!-- eslint-disable vue/no-use-v-if-with-v-for -->
                                <sw-cms-el-eecom-blog-box
                                    v-for="(blog, index) in element.data.blogs"
                                    v-if="index < sliderBoxLimit"
                                    :key="blog.id"
                                    :element="getBlogEl(blog)"
                                />
                            {% endblock %}
                        </template>
                    </div>
                {% endblock %}

                {% block sw_cms_element_eecom_blog_teaser_box_arrow_right %}
                    <div
                        v-if="hasNavigation"
                        class="sw-cms-el-product-slider__navigation"
                    >
                        <sw-icon
                            class="sw-cms-el-product-slider__navigation-button"
                            name="default-arrow-head-right"
                            size="24"
                        />
                    </div>
                {% endblock %}
            </div>
        {% endblock %}

    </div>
{% endblock %}
