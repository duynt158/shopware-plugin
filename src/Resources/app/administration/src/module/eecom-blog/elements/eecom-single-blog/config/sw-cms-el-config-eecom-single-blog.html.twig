{% block sw_cms_element_eecom_blog_single_select_config %}
    <div class="sw-cms-el-config-blog-single-select">
        <sw-entity-single-select
            :placeholder="$tc('eecom-blog.elements.eecomBlogSingle.label.selectFieldPlaceholder')"
            :label="$tc('eecom-blog.elements.eecomBlogSingle.label.selectFieldLabel')"
            entity="eecom_blog"
            v-model="element.config.blogEntry.value">

            <template #selection-label-property="{ item }">
                <slot name="selection-label-property" v-bind="{ item }">
                    {{ item.translated.title || item.name }}
                </slot>
            </template>

            <template #result-item="{ item, index }">
                <slot name="result-item" v-bind="{ item, index }">
                    <li is="sw-select-result" v-bind="{ item, index }">
                        {{ item.translated.title || item.name }}
                    </li>
                </slot>
            </template>
        </sw-entity-single-select>

        {% block eecom_blog_element_eecom_blog_single_select_config_show_type %}
            <sw-select-field :label="$tc('eecom-blog.elements.listing.config.showType.label')"
                             v-model="element.config.showType.value">
                {% block eecom_blog_cms_element_product_listing_config_layout_select_options %}
                    <option value="standard">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.layoutTypeStandard') }}
                    </option>
                    <option value="image">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.layoutTypeImage') }}
                    </option>
                    <option value="minimal">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.layoutTypeMinimal') }}
                    </option>
                {% endblock %}
            </sw-select-field>
        {% endblock %}
        {% block sw_cms_element_eecom_blog_single_select_config_displaymode_select %}
            <sw-select-field
                v-model="element.config.displayMode.value"
                :label="$tc('eecom-blog.elements.eecomBlogSingle.config.label.displayMode')"
            >
                {% block sw_cms_elementeecom_blog_single_select_config_displaymode_select_options %}
                    <option value="standard">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.displayModeStandard') }}
                    </option>
                    <option value="cover">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.displayModeCover') }}
                    </option>
                    <option value="contain">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.displayModeContain') }}
                    </option>
                {% endblock %}
            </sw-select-field>
        {% endblock %}
        {% block sw_cms_element_eecom_blog_single_select_config_settings_vertical_align %}
            <sw-select-field
                v-model="element.config.verticalAlign.value"
                :label="$tc('eecom-blog.elements.eecomBlogSingle.config.label.verticalAlign')"
                :placeholder="$tc('eecom-blog.elements.eecomBlogSingle.config.label.verticalAlign')"
            >
                {% block sw_cms_element_eecom_blog_single_select_config_settings_vertical_align_options %}
                    <option value="flex-start">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.verticalAlignTop') }}
                    </option>
                    <option value="center">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.verticalAlignCenter') }}
                    </option>
                    <option value="flex-end">
                        {{ $tc('eecom-blog.elements.eecomBlogSingle.config.label.verticalAlignBottom') }}
                    </option>
                {% endblock %}
            </sw-select-field>
        {% endblock %}
    </div>
{% endblock %}
