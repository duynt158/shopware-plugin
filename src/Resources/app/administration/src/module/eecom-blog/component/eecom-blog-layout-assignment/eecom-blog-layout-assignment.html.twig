{% block eecom_blog_layout_assignment %}
    <div class="eecom-blog-layout-assignment">
        {% block eecom_blog_layout_assignment_firgure %}
            <div
                class="eecom-blog-layout-assignment__figure"
                @click="openLayoutModal"
            >
                {% block eecom_blog_layout_assignment_firgure_content %}
                    <sw-cms-list-item
                        active
                        :page="cmsPage"
                    />
                {% endblock %}
            </div>
        {% endblock %}

        {% block eecom_blog_layout_assignment_description %}
            <div>
                {% block eecom_blog_layout_assignment_heading %}
                    <div
                        class="eecom-blog-layout-assignment__heading"
                        :class="{ 'is--disabled': !cmsPage }"
                    >
                        {% block eecom_blog_layout_assignment_heading_title %}
                            <p class="eecom-blog-layout-assignment__title">
                                {{ cmsPage ? cmsPage.name : $tc('eecom-blog.layoutAssignment.title') }}
                            </p>
                        {% endblock %}

                        {% block eecom_blog_layout_assignment_heading_subtitle %}
                            <span class="eecom-blog-layout-assignment__subtitle">
                {{ $tc('eecom-blog.layoutAssignment.subtitle') }}
            </span>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block eecom_blog_layout_assignment_buttons %}
                    <div class="eecom-blog-layout-assignment__buttons">
                        {% block eecom_blog_layout_assignment_button_add %}
                            <sw-button
                                class="eecom-blog-layout-assignment__button"
                                size="small"
                                @click="openLayoutModal"
                            >
                                {{ cmsPage
                                ? $tc('eecom-blog.layoutAssignment.textChangeLayout')
                                : $tc('eecom-blog.layoutAssignment.textAssignLayout') }}
                            </sw-button>
                        {% endblock %}

                        {% block eecom_blog_layout_assignment_button_edit %}
                            <sw-button
                                class="eecom-blog-layout-assignment__button"
                                size="small"
                                @click="openInPageBuilder"
                            >
                                {{ cmsPage
                                ? $tc('eecom-blog.layoutAssignment.textEditInDesigner')
                                : $tc('eecom-blog.layoutAssignment.textCreateNewLayout') }}
                            </sw-button>
                        {% endblock %}

                        {% block eecom_blog_layout_assignment_button_delete %}
                            <sw-button
                                v-if="cmsPage"
                                class="eecom-blog-layout-assignment__button"
                                square
                                size="small"
                                @click="onLayoutReset"
                            >
                                <sw-icon
                                    name="default-action-trash"
                                    small
                                />
                            </sw-button>
                        {% endblock %}
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
